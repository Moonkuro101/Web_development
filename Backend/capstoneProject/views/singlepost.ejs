<%- include('partials/header.ejs') %>

<div class="container my-5">
  <h1 class="text-center mb-4"><%= post.title %></h1>
  <div class="text-center">
    <form action="/update-post/<%= post.id %>" method="POST" class="mb-3">
      <input
        type="text"
        name="title"
        value="<%= post.title %>"
        required
        class="form-control mb-2"
        style="width: 100%; height: 50px; font-size: 1.2em"
      />
      <textarea
        name="content"
        required
        class="form-control mb-2"
        style="width: 100%; height: 150px; font-size: 1.2em"
      >
<%= post.content %></textarea
      >
      <button type="submit" class="btn btn-success">Update Post</button>
    </form>

    <form action="/delete-post/<%= post.id %>" method="POST" class="mb-3">
      <button type="submit" class="btn btn-danger">Delete Post</button>
    </form>

    <a href="/posts" class="btn btn-secondary">Back to Posts</a>
  </div>
</div>

<%- include('partials/footer.ejs') %>
